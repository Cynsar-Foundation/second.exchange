{
    
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": ["dom", "esnext", "es2020"],
      "allowJs": false,
      "noUncheckedIndexedAccess": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "experimentalDecorators": true,
      "useUnknownInCatchVariables": true,
      "noEmit": true,
      "jsx": "react",
      "baseUrl": ".",
      "paths": {
        "@libs/application": ["src/application/index.ts"],
        "@libs/application/*": ["src/application/*"],
        "@libs/components": ["src/components/index.ts"],
        "@libs/components/*": ["src/components/*"],
        "@libs/api": ["src/api/index.ts"],
        "@libs/api/*": ["src/api/*"],
        "@app_modules/*": ["src/app_modules/*"]
      }
    },
    "include": ["src"]
}
  